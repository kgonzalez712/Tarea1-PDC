#reader(lib "htdp-advanced-reader.ss" "lang")((modname Tarea1-PDC) (read-case-sensitive #t) (teachpacks ()) (htdp-settings #(#t constructor repeating-decimal #t #t none #f () #f)))
;Funcion encargada de crear una lista con valores de 0
(define (creaList size lista)
  (cond ((= 0 size)(list lista))
              (else (creaList (- size 1) (cons 0 lista)))))

;Funcion encargada de crear una matriz con valores de 0
(define (creaMat size)
  (cond ((= 0 size)'())
        (else (creaMatAux '() size size))))

;Funcion auxiliar que crea la matriz
(define (creaMatAux matrix size cant)
  (cond ((= 0 size)matrix)
        (else (createMatAux (append (creaList cant '()) matrix) (- size 1) cant))))


;Funcion que modifica el valor de una casilla en la matris
(define (cambiaVal mat x y value)(
  cond ((null? mat) '())
       (else (cambiaAux mat x y '() value))))

;Funcion auxiliar para modificar valores en una matris
(define (cambiaAux mat x y res value)(
  cond ((not (equal? x 0)) (cambiaAux (cdr mat) (- x 1) y (
         append res (list (car mat))) value))
       ((and (equal? x 0) (not (equal? y 0))) (append (append res (
         list (susti value y (car mat) '()))) (cdr mat)))
       (else (append (list (susti value y (car mat) '())) (cdr mat)))))

;Funcion que modifica un valor en una lista
(define (susti value pos lista res)(
  cond ((equal? pos 0) (append res (append (list value) (cdr lista))))
       (else (susti value (- pos 1) (cdr lista) (append res (list (car lista)))))))

;Funcion que obtiene el valor de una lista
(define (obtVal mat x y)(
  cond ((not (equal? x 0)) (obtVal (cdr mat) (- x 1) y))
       ((and (equal? x 0) (not (equal? y 0))) (obtAux y (car mat)))
       (else (caar mat))))

;Funcion auxiliar para obtener el valor
(define (obtAux pos lista)(
  cond ((equal? pos 0) (car lista))
       (else (obtAux (- pos 1) (cdr lista)))))
